@{
}
@model List<EShopAdminApplication.Models.Order>

<div class="container">
    <div class="row">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>
    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Costumer Details</th>
                    <th></th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@item.User.UserName</td>

                    <td><a class="btn btn-info custom-button" asp-action="Details" asp-route-orderId="@item.Id">View Order</a></td>
                    <td><a class="btn btn-info custom-button" asp-action="CreateInvoice" asp-route-orderId="@item.Id">Create Invoice</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>